<?xml version="1.0" encoding="utf-8"?>


<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/booking_details_card"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/dimen_5dp"
    android:layout_marginRight="@dimen/dimen_5dp"
    android:layout_margin="@dimen/dimen_10dp"
    app:cardCornerRadius="@dimen/dimen_10dp"
    android:padding="@dimen/dimen_10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <TextView
            android:id="@+id/booking_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_8dp"
            android:layout_marginTop="@dimen/dimen_8dp"
            android:text="123456"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/booking_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_8dp"
            android:layout_marginRight="@dimen/dimen_8dp"
            android:text="2018-07-05"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
            android:layout_toRightOf="@+id/booking_id"
            android:layout_alignParentRight="true"
            android:textAlignment="textEnd"/>


        <TextView
            android:id="@+id/booking_quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_8dp"
            android:layout_marginBottom="@dimen/dimen_8dp"
            android:text="3 tons"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
            android:layout_below="@+id/booking_id"
            android:layout_alignParentStart="true"/>

        <TextView
            android:id="@+id/booking_request_method"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dimen_8dp"
            android:layout_marginBottom="@dimen/dimen_8dp"
            android:text="Online Payment"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
            android:layout_below="@id/booking_date"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@+id/booking_quantity"
            android:textAlignment="textEnd"
            android:textStyle="bold"/>


    </RelativeLayout>

</android.support.v7.widget.CardView>